///
// info
//

.post-time,.post-words,.post-visitor,.post-meta
  @extend $oneline  
  font-size .9rem 
  color rgba(0,0,0,.6)   
  margin-right 1.5rem
  font-family $time-font 

.post-meta
	& a
		margin-right 0.5rem
	& a:last-child
		margin 0

.category-link,.tag-link
    font-size .825rem 
    font-weight 300 
    font-family $font
    &:visited,&:active,&:link
      color rgba(0,0,0,1)     
    &:hover 
     color $thr-clr
  
  
//
// paginator
//
.paginator
	margin 5rem 0 2rem
	font-size .95rem
	text-align center
	border-top 1px solid $line-clr
	border-bottom 1px solid $line-clr
	
.page-number,.prev,.next    
	display inline-block
	padding 12px 10px 
	line-height 1

.page-number:hover  
  color $thr-clr 

.prev,.next
	margin 0 10px 
	letter-spacing .8px
	&:link,&:visited,&:active 
      color $light-gray
	&:hover        
   	  color $thr-clr 
	
.prev  
  float left  
.next  
  float right  
.current  
  color $thr-clr  

