.post-time,.post-words,.post-meta
	@extend $oneline  
	font-size .9rem
	margin-right 24px
	padding 8px 0

//		
//profie
//
.profile
	border-bottom 1px solid $line-clr
	margin 0 0 2rem 0 
	padding-bottom 16px
	text-align center		
.avatar
	display block
	width 90px
	height 90px
	border-radius 50%
.author
	margin .825rem 0  .25rem 
	text-align center	
	font-size 1.125rem
.location
	margin 0 
	font-size .8rem
	color gray
.social
	text-align center
	font-size 1.125rem	
.social a:hover
	color $thr-clr
	
//	
//item
//
.item	
	font-size 1rem
	overflow hidden
	margin 1.6rem 0
	padding 0 2rem
	&:hover
		color $thr-clr
		
.item-date		
	float left
	width 25%
	text-align right
	&:hover		
		color $thr-clr

.item-title
	float left
	margin-left 5%		
	width 70%		
	&:hover		
		color $thr-clr
