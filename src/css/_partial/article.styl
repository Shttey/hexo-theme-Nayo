//
// article
//
.article 
  margin 0px 0 80px 0 
  padding 20px 0 50px 0
  border-bottom 1px solid $line-clr
  opacity 0 
  @media mq-mobile
        opacity 1
//
// title
//
.article-header   
   margin-bottom  1rem
   text-align center
   & time
    color rgba(0,0,0,.5)   
      
.article-title          
    font-size 1.625rem
    margin-bottom 1.25rem 
    padding 0 4px
    display block       
//
// excerpt
//    
.article-excerpt   
    margin 0
    padding 12px 8px   
    font-size 1rem      

.article-info
    text-align center 
    margin .5rem 0
  
.article-readmore 
    display block
    float right
    margin 0 1rem 0 0     
    font-size 0.9rem  
    &:link,&:visited,&:active 
      color $light-gray
    &:hover
      color $thr-clr       
      transform translateY(-3px)    
      transition all .2s linear

  
//
// banner
//    
 .banner-brg    
    position relative
    left -1%   
    width 102%
    height 22.5rem  
    background-size cover
    background-position center
    background-repeat no-repeat
  
.banner-img
    visibility hidden
    width 100%
    height 100%    

//
// gallery
//
    
.gallery-box
    display inline-block
    width 11.22rem
    height 11.22rem    
.gallery-brg    
    border-radius 2px
    display block
    width 11.22rem
    height 11.22rem  
    background-size cover
    background-position center
    background-repeat no-repeat
.gallery-img
    visibility hidden
    width 100%
    height 100%  