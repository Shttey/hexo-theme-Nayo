html,body
  height 100%
  width 100%
  background $bgr
  letter-spacing .3px
  margin 0 
  padding  0
 
body
  clearfix()  
  overflow-x hidden
  font  300 $font-size $font
  margin 0 
  padding 0
      
@media mq-desktop 
    html
      font-size 20px 

  
a
 text-decoration none   
 transition all .2s ease
 &:link,&:visited,&:active 
   color #333
 &:hover
   color $thr-clr
img
  display block
  max-width 100% 
  margin 15px auto 15px auto
  opacity .95
  border-radius 3px
     
time
  font-size 0.825rem
  font-weight 300
  &:hover   
    color $thr-clr


.page-title   
   text-align center
   display block
   margin-bottom 1.5em
   line-height 10px  
   letter-spacing .6px
   color rgba(0,0,0,.5)
   font-size 1.25rem   
   &:hover
      color $thr-clr

.left
  float left
.right
  float right
.center
  text-align center
 
.mask
  display none
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 998
  background rgba(0,0,0,0.2)
  
#backTop 
    display none
    position fixed   
    cursor pointer
    z-index 20
    bottom 8%
    left 92%  
    &:hover    
      color $thr-clr     

.container    
  margin-top 1.8rem
  padding 0 1.8rem 

  
#main   
    margin 0 auto
    padding-top 15px
    width 52%    
    
#toc
    padding 1.8em 0    
    position absolute
    width 250px   
    height 100%
    top 16%
    left 80%     
    overflow hidden
    @media mq-mobile 
      display none


::selection 
  background $sub-clr
  color $white

::-webkit-scrollbar 
    width 8px 
    height 6px 
    background-color #ccc
    
::-webkit-scrollbar  
    @media mq-mobile
      width 2px
      height 2px

::-webkit-scrollbar-track  
    box-shadow inset 0 0 6px rgba(0,0,0,0.3)  
    background-color  #fff

::-webkit-scrollbar-thumb  
    border-radius 3px
    box-shadow  inset 0 0 6px rgba(0,0,0,.3)  
    background-color #555  


.inactive-item	
    color #676767
    &:link,&:visited,&:active 
      color #676767