

$border
  background $white
  border 1px solid $line-clr 
  border-radius 3px
  padding 20px 10px

$oneline
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
  
$tags
  margin 3px 2px
  padding 0.5rem 0.825rem
  display inline-block
  line-height 1.825rem
  font-size 0.825rem
  border 1px solid  $border-clr 
  border-radius 999em 
  transition all .2s ease
  &:visited,&:active,&:link
    color $black 
  &:hover
    background rgba(255,255,255,.2)
    color $thr-clr
    border 1px solid $thr-clr    
   

        
$toRight
    position relative
    cursor pointer
    &:hover 
        color $thr-clr  
    &::after
        content " "
        width 0
        height 1.5px
        background $thr-clr
        position absolute
        top 99%
        right 0
        transition all .4s                
    &:hover:after     
        left 0
        width  100%

$tips
  position relative  
  &:hover:before,
  &:hover:after
    position absolute
    content attr(data-hover) 
    bottom: 130% 
    left 50%
    padding 8px 6px
    width 180px
    margin-left -90px
    font-size: 1.05rem
    box-sizing border-box
    color #fafafa !important
    background #565656
    text-shadow 0 -1px 0 rgba(0,0,0,1) 
    border 1px solid $line-clr
    border-radius 4px
    text-align center
    animation-fill-mode forwards
    animation-name tipsAnimation
    animation-duration .2s
$tips-min
    @extend $tips
    &:hover:before,
    &:hover:after
      padding 4px 3px
      width 100px
      margin-left -50px
      font-size: .95rem
   
@keyframes tipsAnimation
    0%
        transform translateY(8px) 
        opacity .9  
    100%
        transform translateY(0) 
        opacity 1