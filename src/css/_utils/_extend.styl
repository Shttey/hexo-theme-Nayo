
$border
  background $white
  border 1px solid $line-clr 
  border-radius 3px
  padding 20px 10px

$oneline
  text-overflow ellipsis
  overflow hidden
  white-space nowrap

$block
  margin .8em 0 
  padding  .6em
.block
  @extend $block
  
$tags
  margin 3px 2px
  padding 0.5rem 0.825rem
  display inline-block
  line-height 1.825rem
  font-size 0.825rem
  border 1px solid  $border-clr 
  border-radius 999em 
  transition all .2s ease
  &:visited,&:active,&:link
    color rgba(0,0,0,.7)   
  &:hover
    background rgba(255,255,255,.2)
    color $thr-clr
    border 1px solid $thr-clr    
   

        
$toRight
    position relative
    cursor pointer
    &:hover 
        color $thr-clr  
    &::after
        content " "
        width 0
        height 1.5px
        background $thr-clr
        position absolute
        top 99%
        right 0
        transition all .4s                
    &:hover:after     
        left 0
        width  100%


absolute-center(width, height = width)  
  width: width
  height: height
  position: absolute
  top: 50%
  left: 50%
  margin-top: height * -0.5
  margin-left: width * -0.5
