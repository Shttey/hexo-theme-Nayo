<div class="post-content article-excerpt">	
	
  <%- partial('_partial/_article/gallery',{post:post}) %>	

	  <% if (post.excerpt) { %><%- post.excerpt %>
	  <% } else { %> <%- post.content %>  <% } %>  
	  
</div>

<%  var length = raw_length(post.content) %>

<% if( post.banner || length > 70 ) {%>
	<div class="article-info">
		<%- partial('_partial/_common/info',{ post:post,length:length}) %>		
	</div>
<%}%>